{
  "name": "hexa-me-backend",
  "version": "1.0.0",
  "description": "Hexa-Me Attendance Management System Backend API",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "seed": "ts-node src/database/seed.ts",
    "setup": "bash scripts/setup.sh",
    "migrate": "node-pg-migrate",
    "migrate:up": "node-pg-migrate up",
    "migrate:down": "node-pg-migrate down"
  },
  "keywords": [
    "attendance",
    "management",
    "biometric",
    "geofencing"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.32.1",
    "redis": "^4.6.7",
    "socket.io": "^4.6.1",
    "multer": "^1.4.5-lts.1",
    "joi": "^17.9.2",
    "winston": "^3.10.0",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/cors": "^2.8.13",
    "@types/multer": "^1.4.7",
    "@types/node-cron": "^3.0.8",
    "@types/nodemailer": "^6.4.9",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "eslint": "^8.46.0",
    "jest": "^29.6.2",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6",
    "node-pg-migrate": "^6.2.2"
  }
}

